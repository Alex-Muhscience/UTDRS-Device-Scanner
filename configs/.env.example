# UTDRS Device Scanner Configuration
# Copy this file to .env and update with your actual values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.mongodb.net/utdrs_db?retryWrites=true&w=majority

# Server Configuration
SERVER_PORT=8443
SERVER_HOST=0.0.0.0

# SSL/TLS Configuration
SSL_CERT_PATH=configs/certs/server.crt
SSL_KEY_PATH=configs/certs/server.key
SSL_CA_PATH=configs/certs/ca.crt

# Agent Configuration
AGENT_SERVER_HOST=localhost
AGENT_SERVER_PORT=8443
AGENT_SCAN_INTERVAL=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/scanner.log

# Security Configuration
MAX_CLIENTS=100
RATE_LIMIT_PER_MIN=30
